  <div id="result">Noch keine Auswahl getroffen.</div>
  <script>
    // Zell-Eventlistener
    document.querySelectorAll('td.cell').forEach(cell => {
      cell.addEventListener('click', () => {
        const row = cell.getAttribute('data-row');
        document.querySelectorAll(`td.cell[data-row=\"${row}\"]`).forEach(c => c.classList.remove('selected'));
        cell.classList.add('selected');
        updateResult();
      });
    });
    // Ergebnis aktualisieren
    function updateResult() {
      const sels = Array.from(document.querySelectorAll('td.cell.selected')).map(c => ({ param: c.getAttribute('data-param'), label: c.getAttribute('data-label') }));
      const resultDiv = document.getElementById('result');
      if (!sels.length) return resultDiv.textContent = 'Noch keine Auswahl getroffen.';
      const intro = 'Voilà – folgendes Profil weist dein Bildungsanlass aus:';
      const lines = sels.map(s => `\n• ${s.param}: ${s.label}`);
      resultDiv.textContent = intro + lines.join('');
    }
  </script>
